{
	// Workbench
	"workbench.colorTheme": "Gruvbox Dark Medium",
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.layoutControl.enabled": false,
	"workbench.list.smoothScrolling": true,
	"workbench.startupEditor": "none",
	"workbench.tree.indent": 4,

	// Explorer
	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.fileNesting.expand": false,

	// Files
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,

	// Editor
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.cursorBlinking": "phase",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.fontFamily": "Roboto Mono",
	"editor.largeFileOptimizations": false,
	"editor.minimap.enabled": false,
	"editor.smoothScrolling": true,
	"editor.suggest.preview": true,
	"editor.unicodeHighlight.allowedLocales": { "ru": true },
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.unicodeHighlight.invisibleCharacters": false,
	"editor.lineNumbers": "relative",
	"editor.stickyScroll.enabled": true,

	// Git
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"git.openRepositoryInParentFolders": "never",

	// Security ("Trust"-ed Mode)
	"security.workspace.trust.banner": "never",
	"security.workspace.trust.emptyWindow": false,
	"security.workspace.trust.enabled": false,
	"security.workspace.trust.startupPrompt": "never",
	"security.workspace.trust.untrustedFiles": "open",

	// Terminal
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorWidth": 2,
	"terminal.integrated.drawBoldTextInBrightColors": false,
	"terminal.integrated.gpuAcceleration": "auto",
	"terminal.integrated.minimumContrastRatio": 7,
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.tabs.description": "",
	"terminal.integrated.tabs.title": "${process} - ${cwd}",
	"terminal.integrated.useWslProfiles": false,

	// Languages
	// JavaScript
	"[javascript]": { "editor.defaultFormatter": "vscode.typescript-language-features" },
	"javascript.updateImportsOnFileMove.enabled": "always",

	// Python
	"[python]": { "editor.formatOnType": true },

	// TypeScript
	"[typescript]": { "editor.defaultFormatter": "vscode.typescript-language-features"	},
	"typescript.updateImportsOnFileMove.enabled": "always",

	// Uncategorized
	"extensions.ignoreRecommendations": true,
}
